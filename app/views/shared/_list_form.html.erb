<%= simple_form_for(list, html: { class: "needs-validation" }) do |f| %>
  <div class="card border-0 shadow-sm">
    <div class="card-body">
      <%= f.input :name,
                  label: "Nome",
                  input_html: { class: "form-control-lg" },
                  wrapper_html: { class: "mb-4" } %>

      <%= f.button :submit, "Enviar", class: "btn btn-success btn-lg w-100" %>
    </div>
  </div>
<% end %>
